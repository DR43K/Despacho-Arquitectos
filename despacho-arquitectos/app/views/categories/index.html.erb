<p id="notice"><%= notice %></p>

<h1 class="bg-info">Categories</h1>

<table>
  <thead>
    <tr>
      <th>Idcategorias</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</form>
  <tbody class="bg-secondary">
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.idcategorias %></td>
        <td><%= category.nombre %></td>
       
        <td><!-- Ver -->
          <%= button_to category, method: :get, class: 'btn btn-info' do %>
            <i class="fas fa-pen"></i>
          <% end %>
        </td>
        <td><!-- Modificar -->
          <%= button_to  edit_category_path(category), method: :get, class: 'btn btn-warning' do %>
            <i class="fas fa-pen"></i>
          <% end %>
        </td>
        <td><!-- Eliminar -->
          <%= button_to  category, method: :delete, data: { confirm: 'Are you sure?' }, method: :get, class: 'btn btn-danger' do %>
            <i class="fas fa-pen"></i>
          <% end %>
        </td>
       
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to new_category_path, method: :get, class: 'btn btn-success' do %>
  <i class="fas fa-pen"></i>
<% end %>

